<% layout("/layout/boilerplate") %>

<div class="row mt-3">
  <h1 class="offset-3">Singup on WonderLust</h1>
  <div class="col-6 offset-3">
    <form action="/singup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Title</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Eamil</label>
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        />
        
      </div>
       <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
          <div class="valid-feedback">
        Good password
     </div>
     </div>
     <button class="btn btn-success">Singup</button>
    </form>
  </div>
</div>
