<% layout("/layout/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h2>Create a New listing</h2>
    <br />
    <form
      method="post"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Name </label>

        <input
          name="listing[title]"
          placeholder="Add a Cachy title"
          type="text"
          class="form-control"
          required
        />

        <div class="invalid-feedback">Titel shold be valid</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          type="text"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Description shold be valid</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">upload image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="1200"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price shold be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country shold be valid</div>
        </div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Location</label>
          <input
            name="listing[location]"
            placeholder="Jaipur Rajastan"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price shold be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Category</label>
          <select
            name="listing[category]"
            class="form-select"
            id="floatingSelect"
            aria-label="Select a category"
          >
            <option disabled selected>Select a category</option>
            <option value="mountain">Mountain</option>
            <option value="rooms">Rooms</option>
            <option value="desert">Desert</option>
            <option value="pool">Pool</option>
            <option value="castle">Castle</option>
            <option value="camping">Camping</option>
            <option value="farm">Farm</option>
            <option value="iconic-cities">Iconic Cities</option>
            <option value="trending">Trending</option>
          </select>

          <div class="invalid-feedback">Country shold be valid</div>
        </div>
      </div>

      <button class="btn btn-dark add-bth mt-3 mb-3">Add</button>
    </form>
  </div>
</div>
