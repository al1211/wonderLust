<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    font-weight: bold;
  }

  .btn-search:hover {
    background-color: #d63c45;
    color: white;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
    font-weight: bold;
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-light sticky-top shadow-sm">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand fw-bold text-danger" href="/listings">
      <i class="fa-solid fa-compass"></i>
    </a>

    <!-- Toggler for mobile -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <!-- Left nav -->
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <li class="nav-item">
          <a class="nav-link active" href="/listings">Explore</a>
        </li>
        <li class="nav-item d-md-none">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>
        <% if (!currUser) { %>
          <li class="nav-item d-md-none">
            <a class="nav-link" href="/singup"><b>Signup</b></a>
          </li>
          <li class="nav-item d-md-none">
            <a class="nav-link" href="/login"><b>Login</b></a>
          </li>
        <% } else { %>
          <li class="nav-item d-md-none">
            <a class="nav-link" href="/logout"><b>Logout</b></a>
          </li>
        <% } %>
      </ul>

      <!-- Search form -->
      <form class="d-flex me-3 my-2 my-md-0" role="search" onsubmit="event.preventDefault(); handleSearch();">
        <input class="form-control me-2" type="search" placeholder="Search Destination" id="searchInput" />
        <button class="btn btn-search" type="submit">
          <i class="fa-brands fa-searchengin"></i>Search
        </button>
      </form>

      <!-- Right nav -->
      <ul class="navbar-nav d-none d-md-flex">
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>
        <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/singup"><b>Signup</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login"><b>Login</b></a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><b>Logout</b></a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<script>
  function handleSearch() {
    const value = document.getElementById("searchInput").value.trim();
    if (value) {
      window.location.href = `/listings/search/${encodeURIComponent(value)}`;
    } else {
      alert("Please enter a destination to search.");
    }
  }
</script>




